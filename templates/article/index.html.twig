{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <a href="{{ path('app_article_new') }}" class="btn btn-primary mt-5 mb-5">+ Créer un nouvel article</a>
    <h1>Vos bonnes pratiques</h1>
    <section class="articles">
        <div class="row">
            {% for article in articles %}
            <div class="col-md-4 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.contenu|slice(0,200) }}...</p>
                        <p>Publié le {{ article.datePublication ? article.datePublication|date('d/m/Y') : '' }}</p>
                        <a href="{{ path('app_article_show', {id:article.id}) }}" class="btn btn-success">Lire l'article</a>
                    </div>
                </div>
            </div>
            {% else %}
            <p>Aucun article</p>
            {% endfor %} 
        </div>
    </section>
{% endblock %}