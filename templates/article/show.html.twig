{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class ="row">
        <div class="col-md-5 offset-md-3 mt-5 mb-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ article.titre }}</h5>
                    <p class="card-text">{{ article.contenu }}</p>
                    <p>Publié le {{ article.datePublication ? article.datePublication|date('d/m/Y') : '' }}</p>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_article_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-success">Editer</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}